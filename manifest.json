{
    "manifest_version": 3,
    "version": "1.0",
    "name": "leetcode-local-setup",
    "description": "get local file to solve a leetcode problem in your favorite text editor",
    "host_permissions": ["https://leetcode.com/problems/*"],
    "content_scripts": [
        {
            "matches": ["https://leetcode.com/problems/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "hello_extensions.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "downloads"
    ]
}
